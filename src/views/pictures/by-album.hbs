<h1>Manage pictures</h1>
<h3>Album: {{album.title}}</h3>
<p>
  <a href="/">Back to categories</a>
</p>
<hr>
<form action="/pictures/upload" method="post">
  <label>Upload pictures</label>
  <input type="file" name="pictures" accept="image/*" multiple>
</form>
<div class="gallery">
  {{!-- {{#each album.pictures}} --}}
  <div>
    <img src="{{thumbnailPath}}" />
    <span class="picId hidden">{{id}}</span>
    <div>
      <button id="btnPicSetCover">Album cover</button>
      <button id="btnPicDelete">Delete</button>
    </div>
  </div>
  {{!-- {{/each}} --}}
</div>

